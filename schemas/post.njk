<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": "{{ this.ctx.title or title | escape }}",
  "description": "{{ excerpt or this.ctx.excerpt | escape }}",
  "datePublished": "{{ date | date('yyyy-MM-dd') }}",
  "author": {
    "@type": "Person",
    "name": "Echo"
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://echoreader.blog{{ page.url }}"
  }
}
</script>
