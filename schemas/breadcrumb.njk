<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "{{ '/' | toAbsoluteUrl }}"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "{{ category or 'Blog' }}",
      "item": "{{ '/blog/' | toAbsoluteUrl }}"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "{{ title }}",
      "item": "{{ page.url | toAbsoluteUrl }}"
    }
  ]
}
</script>
