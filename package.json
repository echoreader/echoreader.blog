{
  "name": "echoreader-blog",
  "version": "1.0.0",
  "description": "Static blog for echoreader.blog built with Eleventy",
  "author": "Echo Reader",
  "scripts": {
    "dev": "eleventy --serve",
    "build": "eleventy",
    "build:prod": "ELEVENTY_ENV=production eleventy",
