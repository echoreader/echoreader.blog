{
  "name": "echoreader-blog",
  "version": "1.0.0",
  "description": "Static blog for echoreader.blog built with Eleventy",
  "author": "Echo Reader",
  "scripts": {
    "clean": "node clean.js",
    "dev": "cross-env ELEVENTY_ENV=development eleventy --serve",
    "build": "cross-env ELEVENTY_ENV=production eleventy",
    "build:prod": "cross-env ELEVENTY_ENV=production eleventy",
    "watch": "eleventy --watch",
    "start": "npm run dev",
    "uno": "unocss . --out-file src/assets/uno.css"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "cross-env": "^10.1.0",
    "rimraf": "^6.1.0",
    "unocss": "^66.5.5"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/echoreader/echoreader.blog"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "luxon": "^3.7.2"
  }
}
