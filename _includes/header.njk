<header class="w-full bg-black text-white shadow-md fixed top-0 left-0 z-50">
  <div class="max-w-4xl mx-auto flex items-center justify-between px-4 py-3">
    <!-- Brand -->
    <a href="{{ '/' | toAbsoluteUrl }}" class="text-xl font-bold text-white no-underline">Echoreader</a>

    <!-- Hamburger -->
    <button id="menu-toggle" class="lg:hidden flex flex-col gap-1 p-2 text-white" aria-label="Open menu">
      <span class="w-6 h-0.5 bg-white"></span>
      <span class="w-6 h-0.5 bg-white"></span>
    </button>

    <!-- Desktop Nav -->
    <nav class="hidden lg:flex gap-6 items-center">
      <a href="{{ '/blog/' | toAbsoluteUrl }}" class="text-white no-underline hover:text-gray-300">Blog</a>
      <a href="{{ '/about/' | toAbsoluteUrl }}" class="text-white no-underline hover:text-gray-300">About</a>
    </nav>
  </div>

  <!-- Mobile Nav -->
  <div id="mobile-menu" class="hidden lg:hidden bg-black text-white">
    <div class="max-w-6xl mx-auto flex flex-col px-4 py-2">
      <a href="{{ '/blog/' | toAbsoluteUrl }}" class="py-2 text-white no-underline hover:text-gray-300">Blog</a>
      <a href="{{ '/about/' | toAbsoluteUrl }}" class="py-2 text-white no-underline hover:text-gray-300">About</a>
    </div>
  </div>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const toggle = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");
    const desktopNav = document.querySelector("nav.hidden.lg\\:flex");

    const mq = window.matchMedia("(max-width: 1023px)");
    let isBound = false; // flag untuk mencegah double binding

    function bindMobileToggle() {
      if (!toggle || !mobileMenu || isBound) return;
      mobileMenu.classList.add("hidden");

      toggle.addEventListener("click", () => {
        mobileMenu.classList.toggle("hidden");
      });

      isBound = true;
    }

    function unbindMobileToggle() {
      if (!toggle || !isBound) return;
      const clone = toggle.cloneNode(true);
      toggle.parentNode.replaceChild(clone, toggle);
      const newToggle = document.getElementById("menu-toggle");
      isBound = false;
    }

    function handleViewport(e) {
      if (e.matches) {
        bindMobileToggle();

        if (desktopNav) {
          desktopNav.querySelectorAll("a").forEach(link => link.remove());
        }
      } else {
        unbindMobileToggle();

        if (mobileMenu) {
          mobileMenu.classList.add("hidden");
          mobileMenu.querySelectorAll("a").forEach(link => link.remove());
        }
      }
    }

    handleViewport(mq);
    mq.addEventListener("change", handleViewport);
  });
</script>